#calls and reruns the program if there was a problem
while True:  
    chosen_movie = booking()
    chosen_time = booking_t()
    movie1_seat(chosen_movie, chosen_time)
    confirmation(chosen_movie, chosen_time)
    
    answer = input('Is this information correct?')
    answer = answer.lower()

    if answer == 'yes':
        print('Okay, have a nice day!')
        break
    else:
        choice_rebook = input('There seems to be an error, do you want to rebook? : ')
        if choice_rebook == 'no':
            print('Hope to see you again!')
            break
